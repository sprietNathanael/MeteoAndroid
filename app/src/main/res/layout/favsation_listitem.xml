<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/favStation_viewItem_clickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favStation_viewItem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/favStation_viewItem_decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favStation_viewItem_condition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/viewnull"
            android:baselineAlignBottom="true"
            android:layout_marginRight="20dp"/>

        <TextView
            android:id="@+id/favStation_viewItem_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="70sp"/>

        <ImageView
            android:id="@+id/favStation_viewItem_tendance"
            android:layout_width="63dp"
            android:layout_height="68dp"
            android:src="@drawable/tempequ"
            android:baselineAlignBottom="true"/>
    </LinearLayout>

</LinearLayout>